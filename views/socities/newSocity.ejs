<% include ../partials/header %>
<div class="row">
  <div class="col-sm-12">
    <h1 style="text-align: center;">Create a New Socity</h1>
  </div>

    <div class="col-md-7 col-sm-10" style=" margin: 25px auto;">
        <form action="/socity/new" method="POST">
            <div class="form-group">
                <input class="form-control" type="text" name="socity[name]" placeholder="name">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="socity[logo]" placeholder="logo">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="socity[activities]" placeholder="activities">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="socity[description]" placeholder="description">
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block">Submit!</button>
            </div>
        </form>
        <a href="/campgrounds" >Go Back</a>
    </div>
</div>
<% include ../partials/footer %>

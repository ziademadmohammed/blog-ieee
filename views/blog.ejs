<% include partials/header %>
  <div class="container">

    <div class="row animated fadeInUp">

      <div class="col-md-10">
        <!-- ===================Posts Go Here ============================ -->
<!-- https://placeholdit.imgix.net/~text?txtsize=38&txt=400%C3%97400&w=400&h=400 -->
          <% blogs.forEach(function(blog){ %>
            <div class="card" style="margin-top:20px;">
              <div class="row ">
                <div class="col-md-4">
                    <img src="<%= blog.image %>" class="w-100">
                  </div>
                  <div class="col-md-8 px-3">
                    <div class="card-block px-3">
                      <h4 class="card-title" style="margin-top:10px;"><%= blog.header %></h4>
                      <p class="card-text" style="padding-bottom:30px;"><%= blog.description.slice(0,100) %></p>
                      <p class="card-text" style="position:absolute;bottom:0;"><%= blog.socity %></p>
                      <a href="#" class="btn btn-primary" style="position:absolute;right:20;bottom:5;">Read More</a>
                    </div>
                  </div>

                </div>
              </div>
            <% }) %>

        </div>

        <!-- =====================Filter section ========================== -->
        <div class="col-md-2" style="margin-top:20px;">
          <ul class="list-group">
            <li class="list-group-item"><input type="checkbox" name="" value="">   CS</li>
            <li class="list-group-item"><input type="checkbox" name="" value="">   Ras</li>
            <li class="list-group-item"><input type="checkbox" name="" value="">   Etc</li>
          </ul>
        </div>

      </div>

    </div>



  </div>



<% include partials/footer%>

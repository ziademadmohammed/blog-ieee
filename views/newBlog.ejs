<% include partials/header %>

<div class="row">
  <div class="col-sm-12">
    <h1 style="text-align: center;">Create a New Campground</h1>
  </div>

    <div class="col-md-7 col-sm-10" style=" margin: 25px auto;">
        <form action="/blog" method="POST">
            <div class="form-group">
                <input class="form-control" type="text" name="post[header]" placeholder="name">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="post[image]" placeholder="image url">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="socities" placeholder="socity">
            </div>

            <!-- <div class="form-group">
                <input class="form-control" type="text" name="post[description]" placeholder="description">
            </div> -->
            <div class="form-group">
              <textarea name="post[description]" rows="8" style="width:100%;border-radius:5px;padding:8px" placeholder="Description"></textarea>
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block">Submit!</button>
            </div>
        </form>
        <a href="/campgrounds" >Go Back</a>
    </div>
</div>

<% include partials/footer %>
